# ============================================
# LLM API (for quality analysis)
# ============================================
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-20b

# ============================================
# Collection Settings
# ============================================
COLLECTION_FREQUENCY_MINUTES=15
COLLECTION_TIMEOUT_SECONDS=30
COLLECTION_RETRY_ATTEMPTS=3
COLLECTION_BATCH_SIZE=10

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_SCRAPE_INTERVAL_SECONDS=60
PROMETHEUS_QUERY_TIMEOUT_SECONDS=10

# DCGM
DCGM_ENABLED=true
DCGM_SCRAPE_INTERVAL_SECONDS=60
DCGM_QUERY_TIMEOUT_SECONDS=10

# Provider APIs
PROVIDER_API_ENABLED=true
PROVIDER_API_CALL_INTERVAL_MINUTES=60
PROVIDER_API_TIMEOUT_SECONDS=30

# ============================================
# Feature Flags
# ============================================
MULTI_PROVIDER_COLLECTION=true
PARALLEL_COLLECTION=true
AUTOMATIC_RETRY=true
METRIC_CACHING=true
CACHE_TTL_SECONDS=300
