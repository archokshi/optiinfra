# Cost Agent Environment Configuration
# Copy this file to .env and fill in your values

# Service Configuration
SERVICE_NAME=cost-agent
SERVICE_PORT=8001
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://optiinfra:optiinfra_dev_password@localhost:5432/optiinfra
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=cost_agent
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379

# Orchestrator
ORCHESTRATOR_URL=http://localhost:8080

# LLM Configuration (PHASE1-1.8)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=openai/gpt-oss-20b
LLM_ENABLED=true
LLM_CACHE_TTL=3600
LLM_MAX_RETRIES=3
LLM_TIMEOUT=30
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7

# Cloud Provider Credentials
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# GCP
GCP_PROJECT_ID=your_gcp_project_id
GCP_CREDENTIALS_PATH=/path/to/credentials.json
GCP_BILLING_ACCOUNT_ID=your_billing_account_id

# Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# Vultr
VULTR_API_KEY=your_vultr_api_key

# Analysis Configuration
ANALYSIS_LOOKBACK_DAYS=30
SPOT_SAVINGS_TARGET=0.35
RI_SAVINGS_TARGET=0.50

# LangGraph Configuration
enable_graph_visualization=true
max_workflow_iterations=10
workflow_timeout_seconds=300
